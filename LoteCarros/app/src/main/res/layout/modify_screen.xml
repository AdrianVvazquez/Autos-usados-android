<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:background="@drawable/header_modify_car"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/modify_car_txt"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/SuccessModifiedTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:textColor="@color/success_color_dark" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/id_car_label"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CarIdTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/id_car_label"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/name_car_label"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/CarNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textCapSentences"
                android:minHeight="48dp"
                android:text="@string/name_car_label"
                tools:ignore="DuplicateSpeakableTextCheck"
                tools:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/brand_car_label"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/CarBrandTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textCapSentences"
                android:minHeight="48dp"
                android:text="@string/brand_car_label"
                tools:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/model_car_label"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/CarModelTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textCapSentences"
                android:minHeight="48dp"
                android:text="@string/model_car_label"
                tools:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/cylinders_car_label"
                android:textSize="20sp" />


            <RadioGroup
                android:id="@+id/CylindersRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/CarCylinders_4"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:text="@string/radio_new_car_cylinders_4"
                    tools:textSize="18sp" />

                <RadioButton
                    android:id="@+id/CarCylinders_6"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:text="@string/radio_new_car_cylinders_6"
                    tools:textSize="18sp" />

                <RadioButton
                    android:id="@+id/CarCylinders_8"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:text="@string/radio_new_car_cylinders_8"
                    tools:textSize="18sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/price_car_label"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:text="@string/dollar_sign"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/CarPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:text="@string/price_number_example"
                    android:textAlignment="center"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    tools:textSize="18sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:text="@string/double_cero_string"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/image_car_label"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/CarImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/not_image_label"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/BtnSaveModifiedCar"
                android:layout_width="171dp"
                android:layout_height="52dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/button_new_car_submit"
                android:baselineAligned="false"
                android:text="@string/save_car_label" />

            <TextView
                android:id="@+id/ErrorOnModifyTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_example_text"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>